<div class="container">
  <h1>Your Lists</h1>
  <%= link_to 'New List', new_list_path, class: 'button' %>
  <ul>
    <% @lists.each do |list| %>
      <li class="list-item">
        <span><%= link_to list.custom_url, list_path(list.custom_url) %></span>
        <span class="url-actions">
          <%= link_to 'Edit', edit_list_path(list.custom_url), class: 'btn' %>
          <%= link_to 'Delete', list_path(list.custom_url), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn', style: 'background: var(--color-danger);' %>
        </span>
      </li>
    <% end %>
  </ul>
</div>
